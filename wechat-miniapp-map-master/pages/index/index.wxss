/* pages/search/search.wxss */
page{
  height: 100%;
}
.container{
  padding-top:100rpx;box-sizing: border-box;height: 100%;
}
.search-bar{
  background: #333;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
  margin-top: -100rpx;
  display: flex;
  padding: 15rpx 20rpx;
  position: relative;z-index: 1;overflow: hidden;
}
.picker-opts{
  display: inline-block;text-align: center;padding-right: 30rpx;
  line-height: 70rpx;font-size: 28rpx;vertical-align:top;box-sizing: border-box;
}
.picker{
  white-space: nowrap;font-size: 24rpx;color: #aaa;
}
input{
  font-size: 30rpx;color: #aaa;width: 100%;height: 70rpx;
  line-height: 70rpx;box-sizing: border-box;padding-left: 15rpx;
  background: #555;border-radius: 10rpx;
}
.placeholder{
  font-size: 30rpx;
}
.clear{
  position: absolute;right: 0;top: 50%;z-index: 2;height: 60rpx;width: 60rpx;margin-top: -30rpx;
  font-size: 25rpx;text-align: center;
}
.clear{
  height: 60rpx;width: 120rpx;
  background: url(data:image/png;base64,) no-repeat center center;background-size: 40rpx 40rpx;
}
.list-detail,.list-city{
  width: 100%;height: 100%;overflow-y: auto;background: #fff;
}
.list-detail .item-nav{
  border-bottom: 1rpx solid #eee;
}
.list-detail .title,.history .title{
  font-size: 32rpx;color: #000;line-height: 45rpx;
}
.list-detail .address,.history .address{
  font-size: 28rpx;color: #aaa;white-space: normal;
}


/* 城市列表 */
.list-city{position: relative;}
.py{
  box-sizing: border-box;background: #eee;font-size: 30rpx;color: #aaa;padding:15rpx 25rpx;
}
.fullname{
    box-sizing: border-box;font-size: 35rpx;color: #555;padding:25rpx;border-bottom: 1rpx solid #eee;
}
.city-py{
  position: fixed;top: 50%;right: 0;margin-top: -360rpx;
}
.city-py view{
  font-size: 25rpx;width: 60rpx;height: 12px;line-height: 12px;text-align: center;color: #555;
}
.showPy {
    width: 150rpx;
    height: 150rpx;
    background: #fff;
    border-radius:15rpx;
    line-height: 150rpx;
    text-align: center;
    font-size:80rpx;
    margin: auto;
    position: absolute;
    top: 0;left: 0;bottom: 0;right: 0;
    z-index: 3;
    color: #333;
    box-shadow: 0 0 150rpx rgba(0,0,0,.35);
}
.hot-city{
  border: 1rpx solid #eee;display: inline-block;margin: 25rpx 0 0 25rpx;padding: 20rpx 25rpx;
  font-size: 30rpx;
}

/* 历史记录 */
.list-history{
  box-sizing: border-box;padding-top: 70rpx;height: 100%;
}
.search-history{
  background: #f5f5f5;font-size: 25rpx;padding:0 20rpx;color: #aaa;height: 70rpx;line-height: 70rpx;
  margin-top: -70rpx;
}
.clear-history{
  display: inline-block;float: right;border: 1rpx solid #eee;line-height: 40rpx;padding: 0 20rpx;
  margin-top: 15rpx;background: #fff;border-radius: 5rpx;
}
